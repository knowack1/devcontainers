{
    "name": "scylladb-sdk-container",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "mounts": [
        "type=bind,source=/home/karolnowacki/Projects/Scylla,target=/home/karolnowacki/Projects/Scylla",
        "type=bind,source=/home/karolnowacki/.ccache,target=/var/cache/ccache"
    ],
    "runArgs": [
        "--name=scylladb-sdk-container",
        "--cap-add=SYS_PTRACE",
        "--cap-add=SYS_ADMIN",
        "--privileged",
        "--ulimit=core=-1"
    ],
    "remoteUser": "karolnowacki",
    "forwardPorts": [
        9042,   // CQL port for client connections
        9142,   // CQL TLS port
        10000,  // REST API for monitoring (e.g., Prometheus)
        6080,   // Vector store URI port
	    8501    // VectorDBBench
    ],
    "customizations": {
        "vscode": {
            "extensions": [
                "llvm-vs-code-extensions.vscode-clangd",
                "ms-python.debugpy",
                "ms-python.python",
                "ms-python.black-formatter",
                "ms-vscode.cmake-tools",
                "KylinIdeTeam.cmake-intellisence",
                "ms-python.autopep8"
            ]
        }
    }
}
